<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PTMobile.Report"
             Title="Reporte de Cierre"
             >

    <ScrollView Margin="10">
        <Grid x:Name="prueba" Margin="3">
            <StackLayout>
                <ImageButton Source="{AppThemeBinding Light=sharedark.png,Dark=share.png}" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent"  BorderColor="Transparent" x:Name="ShareBtn" HorizontalOptions="End" Margin="0,1,0,3" Clicked="ShareBtn_Clicked"></ImageButton>
            </StackLayout>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>

    </ScrollView>

</ContentPage>
